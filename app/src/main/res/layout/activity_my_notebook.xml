<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".MyNotebook">

    <TextView
        android:id="@+id/textView44"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/monda"
        android:gravity="center|start"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:text="@string/b1"
        android:textColor="#2E2E2E"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/textView47"
        app:layout_constraintStart_toEndOf="@+id/textView45"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView45"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/monda"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="#2E2E2E"
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/ic_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/monda"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textColor="#2E2E2E"
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/ic_save_img_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView47"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/monda"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="#2E2E2E"
        android:textSize="24sp"
        android:visibility="gone"
        app:drawableTopCompat="@drawable/ic_delete_bin"
        app:layout_constraintEnd_toStartOf="@+id/textView46"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:background="@color/gray"
        android:ems="10"
        android:fontFamily="@font/donegal_one"
        android:gravity="center"
        android:hint="@string/a22"
        android:inputType="textPersonName"
        android:padding="7dp"
        android:textColor="#001275"
        android:textColorHint="#5466CD"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView44"
        tools:ignore="Autofill" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.akapps.puzka.LinedEdittext
                android:id="@+id/edit_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="3dp"
                android:autoLink="all"
                android:autofillHints="@string/a21"
                android:background="@drawable/f3"
                android:fontFamily="@font/bitter"
                android:gravity="top|start"
                android:hint="@string/b27"
                android:inputType="textMultiLine|textNoSuggestions"
                android:padding="8dp"
                android:singleLine="false"
                android:textColor="#006E9F"
                android:textColorHint="#3DBEF8"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>